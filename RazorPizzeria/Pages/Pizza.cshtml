@page
@model RazorPizzeria.Pages.PizzaModel
@{
}

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our great selection of pizzas!</h1>
        <h4>Choose one, or try our Pizza Builder!</h4>
        <p class="smallText"><i>Only one pizza per order.</i></p>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/NewFolder/Create.jpg" class="w-100" />
                    </div>
                    <div class="col-8 alig-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create your own Pizza</h3>
                            <p style="text-align:left;">Make your own pizza with our Pizza Maker</p>
                            <a class="btn btn-primary" style="float:left" asp-area="" asp-page="Forms/CustomPizza">Try Now</a>

                        </div>
                    </div> 
                </div>
            </div>
            @foreach (var pizza in Model.fakePizzaDb)
            {
                var imagePath = "~/images/NewFolder/" + (pizza.ImageTitle + ".jpg");

                <div class="col-4 mb-5">
                    <img src="@imagePath" class="w-100" asp-append-version="true" />
                    <a class="btn btn-primary mt-1" asp-area="" asp-page="Checkout/Checkout" asp-route-ImageTitle="@pizza.ImageTitle" asp-route-PizzaName="@pizza.PizzaName" asp-route-PizzaPrice="@pizza.finalPrice">Get this Pizza!</a>
                    <br/>
                </div>       
                
            }
        </div>
    </div>

</div>
